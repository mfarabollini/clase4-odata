<mvc:View xmlns:table="sap.ui.table" controllerName="exaccs.clase4odata.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"> 
    <Page id="page" title="{i18n>title}">

        <Panel headerText="{i18n>tblAerolineas}" class="sapUiSmallMarginTop">
            <Table id="tblAerolineas" items="{vuelos>/AerolineaSet}" mode="None">
                <columns>
                    <Column >
                        <header>
                            <Label text="{i18n>Carrid}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Carrname}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Currcode}"></Label>
                        </header>
                    </Column>
                    
                </columns>
                <items >
                    <ColumnListItem type="Navigation" press="navToVuelos">
                        <cells>
                            <Label text="{vuelos>Carrid}"></Label>
                            <Label text="{vuelos>Carrname}"></Label>
                            <Label text="{vuelos>Currcode}"></Label>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>

    </Page>
</mvc:View>
