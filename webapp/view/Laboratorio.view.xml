<mvc:View xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" controllerName="exaccs.clase4odata.controller.Laboratorio"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Panel headerText="{i18n>tblClientes}" class="sapUiSmallMargin" width="auto"  height="50%">

            <Table id="tblClientes" items="{path: 'vuelos>/ClienteSet', 
                                            parameters: { expand: 'IntegrantesSet' }}" 
                                    growing="true" 
                                    growingThreshold="20" >
              
                <columns>
                    <Column >
                        <header>
                            <Label text="{i18n>Id}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Name}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Street}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>CustType}"></Label>
                        </header>
                    </Column>
                </columns>
                <items >
                    <ColumnListItem type="  {= ${vuelos>Country} === 'DE' ? 'DetailAndActive' : 'Detail' }" press="navToIntegrantes" detailPress="">
                        <cells>
                            <Label text="{vuelos>Id}"></Label>
                            <Label text="{vuelos>Name}"></Label>
                            <Label text="{vuelos>Street}"></Label>
                            <Label text="{vuelos>Country}"></Label>
                           </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
        <Panel class="sapUiSmallMargin" width="auto" height="50%" visible="false" id="pnlInteg">
            <headerToolbar>
                <OverflowToolbar >
                    <Title text="{i18n>tblIntegrantes}"></Title>
                    <ToolbarSpacer />
                    <Button text="Create" press="createIntegrante"></Button>
                </OverflowToolbar>
            </headerToolbar>
            <Table id="tblIntegrantes" items="{vuelos>IntegrantesSet}" mode="None" growing="true" growingThreshold="20">
                <columns>
                    <Column >
                        <header>
                            <Label text="{i18n>Nombre}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Relacion}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Edad}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>Sexo}"></Label>
                        </header>
                    </Column>
                    </columns>
                <items >
                    <ColumnListItem type="Inactive">
                        <cells>
                            <Label text="{vuelos>Nombre}"></Label>
                            <Label text="{vuelos>Relacion}"></Label>
                            <Label text="{ path: 'vuelos>FecNac', formatter: '.calcDate'} "></Label>
                            <Label text="{vuelos>Sexo}"></Label>
                        </cells>

                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </Page>
</mvc:View>
